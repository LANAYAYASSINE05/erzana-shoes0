{%- comment -%}
  Products Grid Section - Tailwind CSS Only
  No custom CSS, only Tailwind utility classes
{%- endcomment -%}

{%- liquid
  assign products_to_show = section.settings.products_list
  if products_to_show == blank
    assign products_to_show = collections.all.products | limit: 4
  endif
-%}

<section class="py-16 md:py-24 bg-white" data-section-id="{{ section.id }}">
  <div class="max-w-7xl mx-auto px-4">
    {%- if section.settings.heading != blank -%}
      <div class="text-center mb-12 max-w-2xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-black mb-4 tracking-tight">
          {{ section.settings.heading }}
        </h2>
        {%- if section.settings.subheading != blank -%}
          <p class="text-base md:text-lg text-black/70">
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
      {%- for product in products_to_show limit: 4 -%}
        <div class="relative bg-white rounded overflow-hidden transition-transform hover:-translate-y-1">
          <a href="{{ product.url }}" class="block text-black">
            <div class="relative overflow-hidden bg-gray-100 aspect-square mb-6">
              {%- if product.featured_image != blank -%}
                <img 
                  src="{{ product.featured_image | image_url: width: 600 }}" 
                  alt="{{ product.title | escape }}"
                  class="w-full h-full object-cover transition-transform duration-500 hover:scale-105"
                  loading="lazy"
                  width="{{ product.featured_image.width }}"
                  height="{{ product.featured_image.height }}"
                >
              {%- else -%}
                <div class="w-full h-full flex items-center justify-center">
                  {{ 'product-1' | placeholder_svg_tag: 'w-full h-full' }}
                </div>
              {%- endif -%}
            </div>
            <div class="px-6 pb-6 text-center">
              <h3 class="text-lg font-medium mb-2 text-black">{{ product.title }}</h3>
              <div class="flex items-center justify-center gap-2 mb-4">
                {%- if product.compare_at_price > product.price -%}
                  <span class="text-base text-gray-500 line-through">{{ product.compare_at_price | money }}</span>
                {%- endif -%}
                <span class="text-lg font-semibold text-black">{{ product.price | money }}</span>
              </div>
            </div>
          </a>
          
          <form action="{{ routes.cart_add_url }}" method="post" enctype="multipart/form-data" class="px-6 pb-6">
            <input type="hidden" name="id" value="{{ product.selected_or_first_available_variant.id }}">
            <button type="submit" class="w-full py-3.5 px-6 bg-gold text-black text-sm font-semibold uppercase tracking-wide rounded transition-all hover:bg-[#B8941F] hover:-translate-y-0.5 hover:shadow-md hover:shadow-gold/30 active:translate-y-0" name="add" aria-label="{{ 'products.product.add_to_cart' | t }}">
              <span>{{ 'products.product.add_to_cart' | t }}</span>
            </button>
          </form>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Products Tailwind",
  "tag": "section",
  "class": "section-products-tailwind",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Meilleures ventes"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Nos produits les plus populaires"
    },
    {
      "type": "product_list",
      "id": "products_list",
      "label": "Products",
      "limit": 4
    }
  ],
  "presets": [
    {
      "name": "Products Tailwind"
    }
  ]
}
{% endschema %}

