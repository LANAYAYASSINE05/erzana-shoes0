{%- comment -%}
  Categories Grid Section - Tailwind CSS Only
  No custom CSS, only Tailwind utility classes
{%- endcomment -%}

{%- liquid
  assign collections_to_show = section.settings.collections_list
  if collections_to_show == blank
    assign collections_to_show = collections | limit: 4
  endif
-%}

<section class="py-16 md:py-24 bg-white" data-section-id="{{ section.id }}">
  <div class="max-w-7xl mx-auto px-4">
    {%- if section.settings.heading != blank -%}
      <div class="text-center mb-12 max-w-2xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-black mb-4 tracking-tight">
          {{ section.settings.heading }}
        </h2>
        {%- if section.settings.subheading != blank -%}
          <p class="text-base md:text-lg text-black/70">
            {{ section.settings.subheading }}
          </p>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 md:gap-8">
      {%- for collection in collections_to_show limit: 4 -%}
        <div class="relative bg-white rounded overflow-hidden transition-transform hover:-translate-y-2">
          <a href="{{ collection.url }}" class="block text-black">
            <div class="relative overflow-hidden bg-gray-100 aspect-[4/3]">
              {%- if collection.featured_image != blank -%}
                <img 
                  src="{{ collection.featured_image | image_url: width: 600 }}" 
                  alt="{{ collection.title | escape }}"
                  class="w-full h-full object-cover transition-transform duration-500 hover:scale-110"
                  loading="lazy"
                  width="{{ collection.featured_image.width }}"
                  height="{{ collection.featured_image.height }}"
                >
              {%- else -%}
                <div class="w-full h-full flex items-center justify-center">
                  {{ 'collection-1' | placeholder_svg_tag: 'w-full h-full' }}
                </div>
              {%- endif -%}
              <div class="absolute inset-0 bg-gradient-to-b from-transparent to-gold/10 opacity-0 hover:opacity-100 transition-opacity"></div>
            </div>
            <div class="p-6 text-center border-t-2 border-transparent hover:border-gold transition-colors">
              <h3 class="text-xl font-semibold mb-2 text-black">{{ collection.title }}</h3>
              {%- if collection.products_count > 0 -%}
                <span class="text-sm text-gray-500 uppercase tracking-wide">{{ collection.products_count }} produits</span>
              {%- endif -%}
            </div>
          </a>
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Categories Tailwind",
  "tag": "section",
  "class": "section-categories-tailwind",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Acheter par catégorie"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Parcourez nos collections sélectionnées"
    },
    {
      "type": "collection_list",
      "id": "collections_list",
      "label": "Collections",
      "limit": 4
    }
  ],
  "presets": [
    {
      "name": "Categories Tailwind"
    }
  ]
}
{% endschema %}

