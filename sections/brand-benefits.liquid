{%- comment -%}
  Brand Benefits Section
  Fast delivery, Premium quality, Secure payment
{%- endcomment -%}

<section class="brand-benefits-section" data-section-id="{{ section.id }}">
  <div class="brand-benefits-container">
    <div class="benefits-grid">
      {%- for block in section.blocks -%}
        <div class="benefit-item" {{ block.shopify_attributes }}>
          <div class="benefit-icon">
            {%- if block.settings.icon != blank -%}
              <img 
                src="{{ block.settings.icon | image_url: width: 60 }}" 
                alt="{{ block.settings.title | escape }}"
                width="60"
                height="60"
              >
            {%- else -%}
              <div class="benefit-icon-placeholder">
                {%- case block.type -%}
                  {%- when 'delivery' -%}
                    <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M15 45L5 35V15H25L35 25H50V45H15Z" stroke="#D4AF37" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      <circle cx="20" cy="45" r="3" fill="#D4AF37"/>
                      <circle cx="45" cy="45" r="3" fill="#D4AF37"/>
                    </svg>
                  {%- when 'quality' -%}
                    <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M30 5L35 20L50 22L38 32L40 47L30 40L20 47L22 32L10 22L25 20L30 5Z" stroke="#D4AF37" stroke-width="2" stroke-linejoin="round"/>
                    </svg>
                  {%- when 'payment' -%}
                    <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <rect x="5" y="15" width="50" height="35" rx="3" stroke="#D4AF37" stroke-width="2"/>
                      <path d="M5 25H55" stroke="#D4AF37" stroke-width="2"/>
                      <circle cx="45" cy="32" r="3" fill="#D4AF37"/>
                    </svg>
                {%- endcase -%}
              </div>
            {%- endif -%}
          </div>
          {%- if block.settings.title != blank -%}
            <h3 class="benefit-title">{{ block.settings.title }}</h3>
          {%- endif -%}
          {%- if block.settings.description != blank -%}
            <p class="benefit-description">{{ block.settings.description }}</p>
          {%- endif -%}
        </div>
      {%- endfor -%}
    </div>
  </div>
</section>

