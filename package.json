{
  "name": "erzana-shoes-shopify-theme",
  "version": "1.0.0",
  "description": "Professional Shopify theme with Tailwind CSS",
  "scripts": {
    "build": "postcss src/css/tailwind.css -o assets/theme.css",
    "watch": "postcss src/css/tailwind.css -o assets/theme.css --watch",
    "dev": "npm run watch",
    "precommit": "npm run build"
  },
  "keywords": [
    "shopify",
    "theme",
    "tailwindcss"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "postcss": "^8.4.47",
    "postcss-cli": "^11.0.0",
    "tailwindcss": "^3.4.13"
  }
}

